<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="doff_planificacion_semanal_info_search" model="ir.ui.view">        
	<field name="name">doff.planificacion.semanal.info.search</field>
	<field name="model">doff.planificacion.semanal.info</field>  
	<field name="arch" type="xml">
	<search string="Busqueda">
		<field name="sku" string="Busqueda por Codigo"/>
	    <field name="description" string="Busqueda por producto"/>
	    <separator/>
	    <group expand="0" string="Agrupado por">
	        <filter string="Tipo Material" domain='[]' context="{'group_by': 'tipo_material'}"/>
	   </group>
	</search>
	</field>
	</record>


	<record model="ir.ui.view" id="doff_planificacion_semanal_info_graph">
    	<field name="name">doff_planificacion_semanal_graph</field>
   	 	<field name="model">doff.planificacion.semanal.info</field>
    	<field name="arch" type="xml">
        	<graph string="Resumen" type="bar">
            	<field name="sku" type="row"/>
            	<field name="porc_cumplimiento" type="measure"/>
        	</graph>
    	</field>
	</record>

	<record model="ir.ui.view" id="doff_planificacion_semanal_info_view_tree">
    	<field name="name">doff_planificacion_semanal_info_view_tree</field>
    	<field name="model">doff.planificacion.semanal.info</field>
    	<field name="arch" type="xml">
	    	<tree string="Planificación semanal" create="0"  delete="0" editable="top">
				<field name="sku" readonly="1"/>
				<field name="description" readonly="1"/>
				<field name="vitola" readonly="1"/>
				<field name="tipo_material" readonly="1"/>
				<field name="prod_esperada" sum="Total" readonly="1"/>
				<field name="prod_real" sum="Total" readonly="1"/>
				<field name="porc_cumplimiento"  nolabel="1" widget="percentpie" readonly="1"/>
				<field name="comments"  />
	    	</tree>
    	</field>
	</record>

	<record id="doff_planificacion_semanal_info_action" model="ir.actions.act_window">
    	<field name="name">Producción semanal</field>
    	<field name="res_model">doff.planificacion.semanal.info</field>
    	<field name="view_type">form</field>
    	<field name="view_mode">tree,graph</field>
    	<field name="domain"> [('doff_planificacion_semanal_id', '=', active_id)]</field>
	</record>


	<record id="doff_planificacion_semanal_detail_search" model="ir.ui.view">        
	<field name="name">doff.planificacion.semanal.detail.search</field>
	<field name="model">doff.planificacion.semanal.detail</field>  
	<field name="arch" type="xml">
	<search string="Busqueda">
		<field name="code" string="Busqueda por Codigo"/>
	    <field name="name" string="Busqueda por producto"/>
	    
	    <separator/>
	    <group expand="0" string="Agrupado por">
	        <filter string="Tipo Material" domain='[]' context="{'group_by': 'tipo_material'}"/>
	   </group>
	</search>
	</field>
	</record>


	<record model="ir.ui.view" id="doff_planificacion_semanal_detail_view_tree">
    	<field name="name">doff.planificacion.semanal.detail.view.tree</field>
    	<field name="model">doff.planificacion.semanal.detail</field>
    	<field name="arch" type="xml">
	    	<tree string="Planificación semanal" create="0" edit="0" delete="0">
	        	<field name="code"/>
				<field name="name"/>
				<field name="vitola"/>
				<field name="tipo_material"/>
				<field name="prom_production"/>
				<field name="num_tabaqueros" sum="Total"/>
				<field name="prioridad"/>
	    	</tree>
    	</field>
	</record>


	<record id="action_doff_planificacion_semanal_detail" model="ir.actions.act_window">
    	<field name="name">Planificación semanal</field>
    	<field name="res_model">doff.planificacion.semanal.detail</field>
    	<field name="view_type">form</field>
    	<field name="view_mode">tree</field>
    	<field name="domain"> [('doff_planificacion_semanal_id', '=', active_id)]</field>
	</record>

<record id="doff_planificacion_semanal_form_view" model="ir.ui.view">
	<field name="name">doff_planificacion_semanal_form_view</field>
	<field name="model">doff.planificacion.semanal</field>
	<field name="arch" type="xml">
	<form string="Planificación semanal">
		<header>
			<button name="set_plan_semanal" type="object" groups="bi_operaciones.group_bi_operaciones_manager" string="Aprobar Planificación" class="oe_highlight" states="draft"/>
			<button name="set_prod_diaria" type="object" string="Obtener Producción" class="oe_highlight" states="progreso,aprobado"/>
			<button name="set_finalizar" type="object" groups="bi_operaciones.group_bi_operaciones_manager" string="Cerrar Planificación" class="oe_highlight" states="progreso,aprobado"/>
			<button name="set_borrador" type="object" groups="bi_operaciones.group_bi_operaciones_manager" string="VOLVER A BORRADOR" class="oe_highlight" states="aprobado,progreso"/>
			<field name="state" widget="statusbar"/>
			</header>
		<sheet>
		<div class="oe_button_box" name="button_box">
			<button class="oe_stat_button" icon="fa-list-ol" type="action" name="%(action_doff_planificacion_semanal_detail)d" string="Planificación">
			</button>
			<button class="oe_stat_button" icon="fa-bar-chart-o" type="action" name="%(doff_planificacion_semanal_info_action)d" string="Producción">
			</button>
			
		</div>
		<separator style="color:#009C96;font-style:bold;" string="Planificación Semanal"/>
			<group>
				<group>
					<field name="name" attrs="{'readonly':[('state','!=', 'draft')]}" required="1"/>
					<field name="prod_esperada"/>
					<field name="prod_real" attrs="{'invisible':[('state','=', 'draft' )]}" readonly="1"/>
					<field name="porc_cumplimiento"  nolabel="1" widget="percentpie"/>
				</group>					
				<group>
					<field name="fecha_final" attrs="{'readonly':[('state','!=', 'draft')]}" required="1"/>
					<field name="responsable" readonly="1"/>
				    <field name="week_year"	readonly="1" force_save="1"/>
					<field name="planificacion"	readonly="1" invisible="1" force_save="1"/>
						</group>
					</group>
					<notebook>
						<page string="Planificación de producción">
							<field name="doff_planificacion_semanal_detail_ids" attrs="{'readonly':[('state','!=', 'draft')]}"> 
								<tree editable="bottom"  decoration-success="prioridad == 'Baja'" decoration-warning="prioridad == 'Media'" decoration-danger="prioridad == 'Alta'" >
									<field name="product_id"
				                        domain="[('producto_desnudo','=',True)]"
				                        options="{'no_create':True,'no_open':True}"
				                        required="1"/>

				                    <field name="tipo_material" readonly="1" force_save="1"/>

			                      	<field name="vitola"
			                        	readonly="1"
			                        	force_save="1"/>

			                      	<field name="prom_production"/>

                      				<field name="num_tabaqueros"
                        				required="1" sum="Total"/>
                    				<field name="prioridad"/>
                        			<field name="prod_esperada" force_save="1" sum="Total" invisible="1"/>
								</tree>
							</field>
						</page>
						<page string="Requerimiento de recursos"  attrs="{'invisible':[('state','=', 'draft')]}">
							<group>
							<field name="plan_mp_id" readonly="1"/>
							</group>
							<separator style="color:#009C96;font-style:bold;" string="Producción Esperada"/>
                            <group>
                                <group>
                                	<field name="num_tabaqueros_material" readonly="1"/>
                                	<field name="prod_esperada_material" readonly="1"/>
                                	
 								</group>
 								<group>
 									<field name="num_tabaqueros_picadura" readonly="1"/>
 									<field name="prod_esperada_picadura" readonly="1"/>
 									
 								</group>
                            </group>
						</page>
					</notebook>
				</sheet>
				<div class="oe_chatter">                             
			    	<field name="message_ids" widget="mail_thread"/>
				</div>
			</form>
		</field>
	</record>

	<record id="doff_planificacion_semanal_tree_view" model="ir.ui.view">
		<field name="name">doff_planificacion_semanal_tree_view</field>
		<field name="model">doff.planificacion.semanal</field>
		<field name="arch" type="xml">
			<tree>
				<field name="planificacion"/>
				<field name="week_year"/>
				<field name="name"/>
				<field name="fecha_final"/>
				<field name="num_tabaqueros_material"/>
				<field name="num_tabaqueros_picadura" />
				<field name="prod_esperada_material"/>
				<field name="prod_esperada_picadura" />
				<field name="porc_cumplimiento"  nolabel="1" widget="percentpie"/>
				<field name="state" />
			</tree>
		</field>
	</record>

	<record id="doff_planificacion_semanal_menu_action" model="ir.actions.act_window">
		<field name="name">Planificación semanal</field>
		<field name="res_model">doff.planificacion.semanal</field>
		<field name="view_mode">tree,form</field>
	</record>
	
</odoo>